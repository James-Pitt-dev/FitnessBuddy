<% layout('layouts/boilerplate'); %>
<h1>Register</h1>
<form action="/register" method="POST" class="validated-form" novalidate>   
    <div class="mb-3">    
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="campground[username]" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
    <div class="mb-3">    
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="campground[email]" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
    <div class="mb-3">    
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="campground[password]" required>
        <div class="valid-feedback">
            Looks Good!
        </div>
    </div>
    <button class="btn btn-success" type="submit">Register</button>
</form>