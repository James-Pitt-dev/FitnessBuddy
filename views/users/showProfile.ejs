<% layout('layouts/boilerplate') %>

    <!-- show user profile information -->

    <div class="show-workout-profile">
        <div class="form-head">
            <h1 class="text-center">View / Update User Profile</h1>
        </div>
        <div class="col-md-9 offset-md-3">
            <form action="/editProfile" method="POST" novalidate class="validated-form">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="username"
                            value="<%= currUser.username %>" required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                </div>
                <input class="form-control" type="text" id="_id" name="_id" value="<%= currUser._id %>" hidden>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="text" id="email" name="email" value="<%= currUser.email %>"
                            readonly required>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="form-label" for="experience">Experience</label>
                        <select class="form-select" id="experience" name="experience" required>
                            <option value="beginner" <% if(currUser.experience=="beginner" ) { %>
                                selected
                                <% } %>
                                    >Beginner
                            </option>
                            <option value="intermediate" <% if(currUser.experience=="intermediate" ) { %>
                                selected
                                <% } %>
                                    >Intermediate
                            </option>
                            <option value="advanced" <% if(currentUser.experience=="advanced" ) { %>
                                selected
                                <% } %>
                                    >Advanced
                            </option>
                        </select>

                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>
                </div>
                

                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="weight">Weight (lbs)</label>
                        <input class="form-control" type="number" name="currentWeight" id="currentWeight"
                            value="<%= currUser.currentWeight %>">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="weight">Goal Weight (lbs)</label>
                        <input class="form-control" type="number" name="goalWeight" id="goalWeight"
                            value="<%= currUser.goalWeight %>">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="height">Height (cm)</label>
                        <input class="form-control" type="number" name="height" id="height"
                            value="<%= currUser.height %>">
                    </div>
                    <div class="form-group col-md-4 mb-3 mt-3">
                        <label for="workoutfrequency">Workout Frequency</label>
                        <select class="form-select" id="workoutfrequency" name="workoutfrequency" required>
                            <option value="2days" <% if(currUser.workoutfrequency=="2days" ) { %>
                                selected
                                <% } %>
                                    >2days
                            </option>
                            <option value="3days" <% if(currUser.workoutfrequency=="3days" ) { %>
                                selected
                                <% } %>
                                    >3days
                            </option>
                            <option value="4days" <% if(currentUser.workoutfrequency=="4days" ) { %>
                                selected
                                <% } %>
                                    >4days
                            </option>
                            <option value="5days" <% if(currUser.workoutfrequency=="5days" ) { %>
                                selected
                                <% } %>
                                    >5days
                            </option>
                            <option value="6days" <% if(currUser.workoutfrequency=="6days" ) { %>
                                selected
                                <% } %>
                                    >6days
                            </option>
                            <option value="7days" <% if(currentUser.workoutfrequency=="7days" ) { %>
                                selected
                                <% } %>
                                    >7days
                            </option>
                        </select>

                    </div>

                    <div class="mb-3">
                        <label class="form-label">Please select your sex.</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="male" value="male" <% if(currentUser.gender == "male") { %> checked <% } %>>
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="female" value="female" <% if(currentUser.gender == "female") { %> checked <% } %>>
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-row mb-3">
                        <div class="form-group col-md-3">
  <label for="age" class="form-label">What is your age?</label>
  <input type="number" class="form-control" id="age" name="age" placeholder="Enter your age" value="<%= currentUser.age %>">
</div>
</div>
